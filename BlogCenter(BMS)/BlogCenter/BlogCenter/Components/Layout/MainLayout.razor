@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Authorization

<div class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <AuthorizeView>
        <Authorized>
           <Header/>
        </Authorized>
    </AuthorizeView>

    <!-- Main Content -->
    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <AuthorizeView>
            <Authorized>
                <Sidebar />
            </Authorized>
        </AuthorizeView>
     


        <!-- Main Content Area -->
        <main class="flex-grow-1 main-content">
            <div class="">
                <div class="row">
                    <div class="col">
                        @Body
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <AuthorizeView>
        <Authorized>
            <Footer />
        </Authorized>
    </AuthorizeView>


</div>


